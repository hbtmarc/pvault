rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Replace ADMIN_UID with the master admin UID.
      return signedIn() && request.auth.uid == "JPqv3o4EIqQyfbnWVS2KEcL1hoo1";
    }

    match /users/{userId} {
      // Root user profile doc.
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);

      // Subcollections: categories / transactions / budgets / recurringRules / etc.
      match /{document=**} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
    }

    // Deny everything outside /users.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
