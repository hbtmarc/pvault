rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // MVP: admin por UID fixo (simples e suficiente para projeto pessoal)
      return signedIn() && request.auth.uid == "JPqv3o4EIqQyfbnWVS2KEcL1hoo1";
    }

    // Namespace do app
    match /users/{userId} {

      // Doc raiz do perfil (vamos criar no Sprint 3)
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);

      // Subcoleções: categories / transactions / budgets / recurringRules / etc
      match /{document=**} {
        // Dono: lê e escreve
        allow read, write: if isOwner(userId);

        // Admin: apenas leitura de qualquer userId
        allow read: if isAdmin();
      }
    }

    // Negar todo o resto fora de /users
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
